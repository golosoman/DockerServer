@model IEnumerable<GigaPizza.Models.Pizza>
@{
    ViewData["Title"] = "Каталог пицц";
    Layout = "~/Views/Shared/_Layout.cshtml"; // если используется общий layout
}

<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/styles/pizza_item_style.css">
    <link rel="stylesheet" href="~/styles/pizza_catalog.css">

    <style>
        .autocomplete-dropdown {
            display: block !important;
            position: absolute;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
            border-radius: 4px;
            z-index: 1000;
            width: 220px;
            overflow: hidden;
        }

        .autocomplete-item {
            padding: 8px 12px;
            cursor: pointer;
            transition: background 0.2s ease, color 0.2s ease;
        }

            .autocomplete-item:hover,
            .autocomplete-item.active {
                background: #378BA4;
                color: #fff;
            }

    </style>
</head>

<body>


    <main>
        <div class="catalog-container">
            <div class="filters">
                <div class="search-container">
                    <strong>Поиск пиццы по названию</strong>
                    <input type="text" id="search" placeholder="Поиск пиццы...">
                    <div id="autocomplete-results" class="autocomplete-dropdown" style="display:none;"></div>
                </div>

                <strong>Фильтр по категориям</strong>
                <label>
                    <input type="checkbox" name="type" value="мясная"> Мясные
                </label>
                <label>
                    <input type="checkbox" name="type" value="вегетарианская"> Вегетарианские
                </label>
                <label>
                    <input type="checkbox" name="type" value="острая"> Острые
                </label>

                <strong>Фильтр по цене</strong>
                <label for="min-price">Минимальная цена:</label>
                <input type="number" id="min-price" name="min-price" min="0" placeholder="0" value="0">
                <label for="max-price">Максимальная цена:</label>
                <input type="number" id="max-price" name="max-price" min="0" placeholder="1000" value="1000">
            </div>
            <div class="pizza-catalog-container">
                <h1>Каталог наших пицц</h1>
                <div class="pizza-container">
                    @* @foreach (var pizza in Model) *@
                    @* { *@
                    @*     <div class="pizza-item"> *@
                    @*         <div class="img-container"> *@
                    @*             <img src="~/@pizza.Image" alt="@pizza.Name"> *@
                    @*             <img src="~/@pizza.Image" alt="@pizza.Name" class="zoomed-img"> *@
                    @*         </div> *@
                    @*         <strong>@pizza.Name</strong> *@
                    @*         <p>@pizza.Ingredients</p> *@
                    @*         <p>Цена: @pizza.Price</p> *@
                    @*         <a href="#">Выбрать</a> *@
                    @*     </div> *@
                    @* } *@
                </div>
            </div>
        </div>

        <div class="pagination">
            <button id="prevPage" disabled>Предыдущая</button>
            <span id="pageInfo"></span>
            <button id="nextPage">Следующая</button>
        </div>
    </main>

    <script src="~/scripts/pizza_catalog.js" asp-append-version="true"></script>


    @* <script src="~/scripts/add_data.js"></script>
    <script src="~/scripts/add_catalog_content.js"></script> *@
</body>

</html>